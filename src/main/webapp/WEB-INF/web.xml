<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    id="WebApp_ID"
    version="2.5">
<!-- 系统配置文件 -->
<context-param>
	<param-name>com.cta.platform.config.file</param-name>
	<param-value>SystemGlobals.properties</param-value>
</context-param>

<!-- log4j的配置 -->
<context-param>
	<param-name>com.cta.platform.lo4j.file</param-name>
	<param-value>/WEB-INF/log4j.xml</param-value>
</context-param>

<!-- spring 配置文件 -->
<context-param>
	<param-name>contextConfigLocation</param-name>
	<param-value>classpath*:applicationContext*.xml</param-value>
</context-param>

<!-- 配置session的超时时间30分钟 -->
<session-config>
	<session-timeout>30</session-timeout>
</session-config>
<!-- 初始化系统配置 -->
<listener>
	<listener-class>com.cta.platform.config.ConfigInitializer</listener-class>
</listener>

<listener>
	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
</listener>

<filter>
	<filter-name>Spring character encoding filter</filter-name>
	<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
	<init-param>
		<param-name>encoding</param-name>
		<param-value>UTF-8</param-value>
	</init-param>
</filter>
<filter-mapping>
	<filter-name>Spring character encoding filter</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping>

<!-- 如果ETag没改变，则返回状态304然后不返回 -->
<filter>
	<filter-name>etagFilter</filter-name>
	<filter-class>org.springframework.web.filter.ShallowEtagHeaderFilter</filter-class>
</filter>
<filter-mapping>
	<filter-name>etagFilter</filter-name>
	<url-pattern>/*</url-pattern>
</filter-mapping>

<servlet-mapping>
         <servlet-name>default</servlet-name>
         <url-pattern>*.ico</url-pattern>
</servlet-mapping>

<servlet-mapping>
         <servlet-name>default</servlet-name>
         <url-pattern>*.apk</url-pattern>
</servlet-mapping>

<!-- Spring配置开始 -->
<servlet>
	<servlet-name>springmvc</servlet-name>
	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	<init-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
		  /WEB-INF/springmvc-servlet.xml
		</param-value>
	</init-param>
	<load-on-startup>1</load-on-startup>
</servlet>
<servlet-mapping>
	<servlet-name>springmvc</servlet-name>
	<url-pattern>/</url-pattern>
</servlet-mapping>
<!-- Spring配置结束 -->

<!-- 指定下数据源 -->
<resource-ref>
	<description>DB Connection</description>
	<res-ref-name>jdbc/cta_platform</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
</resource-ref>


<!-- 异常页面 -->
<error-page>
	<error-code>404</error-code>
	<location>/assets/exception/404.html</location>
</error-page>
<error-page>
	<error-code>500</error-code>
	<location>/assets/exception/404.html</location>
</error-page>

<welcome-file-list>
<welcome-file>/index.html</welcome-file>
</welcome-file-list>
</web-app>